<resources>
    <!-- Base application theme. -->
    <style name="Basic_Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/basic_primaryColor</item>
        <item name="colorPrimaryDark">@color/basic_primaryDarkColor</item>
        <item name="colorAccent">@color/basic_primaryLightColor</item>
    </style>

    <style name="MaterialTextButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>


    <style name="RoundButtonStyle" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/basic_primaryDarkColor</item>
        <item name="colorControlActivated">@color/basic_primaryTextColor</item>
    </style>

    <style name="Basic_Selector_Theme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/basic_primaryColor</item>
        <item name="colorPrimaryDark">@color/basic_primaryDarkColor</item>
        <item name="colorAccent">@color/basic_primaryLightColor</item>
    </style>
</resources>